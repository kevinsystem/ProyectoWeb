@model IEnumerable<proyectokevin.Models.habitacion>
@{
    ViewBag.Title = "Hotel Vangoh";
}

<div class="">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://korianka.com/archivos/banner/1360316290-23-05-2016.png" class="img_slide tamanio_slide" alt="Hotel korianka">
                <div class="carousel-caption">
                    <h1 class="titulo1 titulo_especial1 font_Myriad_Web">HOTEL VANGOH</h1>
                    <p class="titulo2 titulo_especial2">Bienvenidos a nuestra plataforma web</p>
                    <p><a class="btn btn-lg btn-warning font_Myriad_Web" href="@Url.Action("Contact", "Home")" role="button">Conócenos</a></p>
                </div>
            </div>
            <div class="item ">
                <img src="http://korianka.com/archivos/banner/894846773-23-05-2016.png" class="img_slide tamanio_slide" alt="Hotel korianka">
                <div class="carousel-caption">
                    <h1 class="titulo1 titulo_especial1 font_Myriad_Web">HOTEL VANGOH</h1>
                    <p class="titulo2 titulo_especial2">Confortablemente Exclusivo</p>
                    <p><a class="btn btn-lg btn-warning font_Myriad_Web" href="#" role="button">Ver Habitaciones</a></p>
                </div>
            </div>
            <div class="item ">
                <img src="http://korianka.com/archivos/banner/1603186392-23-05-2016.png" class="img_slide tamanio_slide" alt="Hotel korianka">
                <div class="carousel-caption">
                    <h1 class="titulo1 titulo_especial1 font_Myriad_Web">HOTEL VANGOH</h1>
                    <p class="titulo2 titulo_especial2">Un ambiente acogedor para sentirse como en casa</p>
                    <p><a class="btn btn-lg btn-warning font_Myriad_Web" href="#" role="button">Reservar</a></p>
                </div>
            </div>

        </div>


        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<br />
<h2>HABITACIONES DISPONIBLES</h2>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <h2>@Html.DisplayFor(modelItem => item.hab_codigo)</h2>
        <p>
            <label>
                @Html.DisplayFor(modelItem => item.hab_descripcion)
            </label>
           </p>
        <img src="@Html.DisplayFor(modelItem => item.hab_fotop)" alt="Alternate Text" class="img-responsive" style="height:240px;"/>
        <br />
        <p><a class="btn btn-default" href="@Url.Action("Create", "reserva")">Reservar &raquo;</a></p>
    </div>
    
    }
</div>